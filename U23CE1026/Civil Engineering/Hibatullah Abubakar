import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class HibatullahCalculator {
    private JFrame frame;
    private JTextField textField;
    private String operator = "";
    private double num1, num2, result;

    public HibatullahCalculator() {
        frame = new JFrame("Hibatullah Calculator");
        frame.setLayout(new BorderLayout());
        frame.setSize(400, 500);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        // Display Field
        textField = new JTextField();
        textField.setFont(new Font("Arial", Font.PLAIN, 50));
        textField.setBackground(Color.BLACK);
        textField.setForeground(Color.WHITE);
        textField.setHorizontalAlignment(JTextField.RIGHT);
        frame.add(textField, BorderLayout.NORTH);

        // Panel for Buttons
        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(5, 4, 10, 10)); // Increased to 5 rows to accommodate "=" button
        frame.add(panel, BorderLayout.CENTER);

        // Button Labels
        String[] buttons = {
            "7", "8", "9", "/", 
            "4", "5", "6", "*", 
            "1", "2", "3", "-", 
            "DEL", "0", "CLR", "+", 
            "%", "=" // Added "=" button
        };

        // Adding Buttons to Panel
        for (String text : buttons) {
            JButton button = new JButton(text);
            button.setFont(new Font("Arial", Font.PLAIN, 20));
            button.setBackground(Color.BLACK);
            button.setForeground(Color.WHITE);
            button.addActionListener(new ButtonClickListener());
            panel.add(button);
        }

        frame.setVisible(true);
    }

    private class ButtonClickListener implements ActionListener {
        public void actionPerformed(ActionEvent e) {
            String command = e.getActionCommand();

            if (command.equals("CLR")) {  // Clear everything
                textField.setText("");
                num1 = num2 = result = 0;
                operator = "";
            } else if (command.equals("DEL")) { // Delete last character
                String text = textField.getText();
                if (!text.isEmpty()) {
                    textField.setText(text.substring(0, text.length() - 1));
                }
            } else if (command.equals("=")) { // Perform calculation
                if (operator.isEmpty() || textField.getText().isEmpty()) return;

                num2 = Double.parseDouble(textField.getText());
                switch (operator) {
                    case "+": result = num1 + num2; break;
                    case "-": result = num1 - num2; break;
                    case "*": result = num1 * num2; break;
                    case "/": 
                        if (num2 != 0) result = num1 / num2;
                        else { textField.setText("Error"); return; } 
                        break;
                    case "%": result = num1 % num2; break;
                }
                textField.setText(String.valueOf(result));
                num1 = result;  // Store result for further operations
                operator = "";
            } else if ("+-*/%".contains(command)) { // Operator selection
                if (!textField.getText().isEmpty()) {
                    num1 = Double.parseDouble(textField.getText());
                    operator = command;
                    textField.setText("");
                }
            } else { // Number input
                textField.setText(textField.getText() + command);
            }
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(HibatullahCalculator::new);
    }
}
